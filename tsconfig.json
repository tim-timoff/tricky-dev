{
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
  },
  "compilerOptions": {
    "types": ["node"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "es2018",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "out",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "plugins": [{ "transform": "typescript-transform-paths" }] 
  },
  "exclude": ["node_modules"],
  "include": ["src/*.ts"],
  "extends": "./paths.json"
}